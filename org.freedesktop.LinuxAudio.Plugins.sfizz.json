{
    "id": "org.freedesktop.LinuxAudio.Plugins.sfizz",
    "runtime": "org.freedesktop.LinuxAudio.BaseExtension",
    "sdk": "org.freedesktop.Sdk//20.08",
    "runtime-version": "20.08",
    "build-extension": true,
    "appstream-compose": false,
    "branch": "20.08",
    "build-options": {
        "prefix": "/app/extensions/Plugins/sfizz"
    },
    "modules": [
        {
            "name": "sfizz",
            "buildsystem": "cmake",
            "build-options": {
                "arch": {
                    "x86_64": {
                        "config-opts": [
                            "-DSFIZZ_VST=ON"
                        ]
                    },
                    "aarch64": {
                        "config-opts": [
                            "-DSFIZZ_VST=ON"
                        ]
                    },
                    "arm": {
                        "config-opts": [
                            "-DSFIZZ_VST=OFF"
                        ]
                    }
                }
            },
            "config-opts": [
                "-DSFIZZ_JACK=OFF",
                "-DSFIZZ_BENCHMARKS=OFF",
                "-DSFIZZ_TESTS=OFF",
                "-DSFIZZ_LV2=ON",
                "-DSFIZZ_SHARED=OFF",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "cleanup": [
                "*.a",
                "/lib/pkgconfig",
                "/include"
            ],
            "post_install": [
                "strip ${FLATPAK_DEST}/lv2/*.lv2/*.so",
                "test ${FLATPAK_ARCH} != 'arm' && strip ${FLATPAK_DEST}/vst3/*.vst3/Contents/*/*.so",
                "install -Dm644 -t $FLATPAK_DEST/share/licenses/sfizz LICENSE.md",
                "install -Dm644 --target-directory=${FLATPAK_DEST}/share/metainfo org.freedesktop.LinuxAudio.Plugins.sfizz.metainfo.xml",
                "appstream-compose --basename=org.freedesktop.LinuxAudio.Plugins.sfizz --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.LinuxAudio.Plugins.sfizz"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/sfztools/sfizz.git",
                    "tag": "0.4.0",
                    "commit": "65580beadb79263da533263066dc66a2f090b643",
                    "disable-shallow-clone": true,
                    "disable-fsckobjects": true
                },
                {
                    "type": "git",
                    "url": "https://github.com/abseil/abseil-cpp",
                    "commit": "c51510d1d87ebce8615ae1752fd5aca912f6cf4c",
                    "disable-shallow-clone": true,
                    "disable-fsckobjects": true,
                    "path": "external/abseil-cpp"
                },
                {
                    "type": "git",
                    "url": "https://github.com/steinbergmedia/vst3_base.git",
                    "commit": "4f6a7184f20f40a7c940a6717e6e0d8b35eeea63",
                    "disable-shallow-clone": true,
                    "path": "vst/external/VST_SDK/VST3_SDK/base"
                },
                {
                    "type": "git",
                    "url": "https://github.com/sfztools/vst3_pluginterfaces.git",
                    "commit": "8c07a58d84c544a73e1ccad2efae200505796773",
                    "disable-shallow-clone": true,
                    "path": "vst/external/VST_SDK/VST3_SDK/pluginterfaces"
                },
                {
                    "type": "git",
                    "url": "https://github.com/sfztools/vst3_public_sdk.git",
                    "commit": "ff836e8c02bd28c902f5e3e75353a86f65008a77",
                    "disable-shallow-clone": true,
                    "path": "vst/external/VST_SDK/VST3_SDK/public.sdk"
                },
                {
                    "type": "git",
                    "url": "https://github.com/sfztools/vstgui.git",
                    "commit": "c6a7f607c21a7353e922a6d45e54d6c56d5a6745",
                    "disable-shallow-clone": true,
                    "path": "vst/external/VST_SDK/VST3_SDK/vstgui4"
                },
                {
                    "type": "patch",
                    "path": "sfizz-lv2.patch"
                },
                {
                    "type": "file",
                    "path": "org.freedesktop.LinuxAudio.Plugins.sfizz.metainfo.xml"
                }
            ]
        }
    ]
}
