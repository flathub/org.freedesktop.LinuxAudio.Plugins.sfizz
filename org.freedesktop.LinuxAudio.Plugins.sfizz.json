{
    "id": "org.freedesktop.LinuxAudio.Plugins.sfizz",
    "runtime": "org.freedesktop.LinuxAudio.BaseExtension",
    "sdk": "org.freedesktop.Sdk//22.08",
    "runtime-version": "stable",
    "build-extension": true,
    "appstream-compose": false,
    "branch": "22.08",
    "build-options": {
        "prefix": "/app/extensions/Plugins/sfizz"
    },
    "modules": [
        {
            "name": "sfizz",
            "buildsystem": "cmake-ninja",
            "build-options": {
                "arch": {
                    "x86_64": {
                        "config-opts": [
                            "-DSFIZZ_VST=ON"
                        ]
                    },
                    "aarch64": {
                        "config-opts": [
                            "-DSFIZZ_VST=ON"
                        ]
                    }
                }
            },
            "config-opts": [
                "-DSFIZZ_JACK=OFF",
                "-DSFIZZ_BENCHMARKS=OFF",
                "-DSFIZZ_TESTS=OFF",
                "-DSFIZZ_LV2=ON",
                "-DSFIZZ_SHARED=OFF",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "cleanup": [
                "/bin",
                "*.a",
                "/lib/pkgconfig",
                "/include"
            ],
            "post_install": [
                "strip ${FLATPAK_DEST}/lv2/*.lv2/Contents/Binary/*.so",
                "test ${FLATPAK_ARCH} != 'arm' && strip ${FLATPAK_DEST}/vst3/*.vst3/Contents/*/*.so",
                "install -Dm644 -t $FLATPAK_DEST/share/licenses/sfizz LICENSE",
                "install -Dm644 --target-directory=${FLATPAK_DEST}/share/metainfo org.freedesktop.LinuxAudio.Plugins.sfizz.metainfo.xml",
                "appstream-compose --basename=org.freedesktop.LinuxAudio.Plugins.sfizz --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.LinuxAudio.Plugins.sfizz"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/sfztools/sfizz/releases/download/1.2.1/sfizz-1.2.1.tar.gz",
                    "sha256": "5a4af23b2a4f1646aaa208d1e71adcf1e706dd6375c4e898b6e49592d85ac298"
                },
                {
                    "type": "patch",
                    "path": "sfizz-lv2.patch"
                },
                {
                    "type": "file",
                    "path": "org.freedesktop.LinuxAudio.Plugins.sfizz.metainfo.xml"
                }
            ]
        }
    ]
}
