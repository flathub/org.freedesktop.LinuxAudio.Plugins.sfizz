{
    "id": "org.freedesktop.LinuxAudio.Plugins.sfizz",
    "runtime": "org.freedesktop.LinuxAudio.BaseExtension",
    "sdk": "org.freedesktop.Sdk//23.08",
    "runtime-version": "stable",
    "build-extension": true,
    "appstream-compose": false,
    "branch": "23.08",
    "build-options": {
        "prefix": "/app/extensions/Plugins/sfizz"
    },
    "modules": [
        {
            "name": "sfizz",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DSFIZZ_JACK=OFF",
                "-DSFIZZ_BENCHMARKS=OFF",
                "-DSFIZZ_TESTS=OFF",
                "-DSFIZZ_SHARED=OFF",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "cleanup": [
                "/bin",
                "*.a",
                "/lib/pkgconfig",
                "/include"
            ],
            "post_install": [
                "strip ${FLATPAK_DEST}/lv2/*.lv2/Contents/Binary/*.so",
                "test ${FLATPAK_ARCH} != 'arm' && strip ${FLATPAK_DEST}/vst3/*.vst3/Contents/*/*.so",
                "install -Dm644 -t $FLATPAK_DEST/share/licenses/sfizz LICENSE",
                "install -Dm644 org.freedesktop.LinuxAudio.Plugins.sfizz.metainfo.xml --t=${FLATPAK_DEST}/share/metainfo",
              "appstream-compose --basename=${FLATPAK_ID} --prefix=${FLATPAK_DEST} --origin=flatpak ${FLATPAK_ID}"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/sfztools/sfizz-ui/releases/download/1.2.2/sfizz-1.2.2.tar.gz",
                    "sha256": "815a825572751d01bc0f1bfc559e121dc8750c7147c6dc58051a0406c02a5287"
                },
                {
                    "type": "patch",
                    "path": "patches/sfizz-plugindir.patch"
                },
                {
                    "type": "file",
                    "path": "org.freedesktop.LinuxAudio.Plugins.sfizz.metainfo.xml"
                }
            ]
        }
    ]
}
